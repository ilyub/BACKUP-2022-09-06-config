{
  "properties": {
    "scripts": {
      "properties": {
        "add-tags": {
          "enum": [
            "php src/utils/add-tags.php",
            "php node_modules/@skylib/config/src/utils/add-tags.php"
          ]
        },
        "browserslist": {
          "const": "browserslist"
        },
        "build": {
          "const": "cf ./dist & tsc --project tsconfig-build.json"
        },
        "build-doc": {
          "enum": [
            "cf ./docs & typedoc src & cpy docs-static/* docs",
            "php chore/build-doc.php"
          ]
        },
        "build-es": {
          "const": "cf ./es & tsc --project tsconfig-build-es.json"
        },
        "clear-cache": {
          "const": "cf cache node_modules/.cache"
        },
        "commit-msg": {
          "const": "npm run commitlint"
        },
        "commitlint": {
          "const": "commitlint --edit"
        },
        "commitlint-all": {
          "const": "commitlint --config commitlint-all.config.js --from="
        },
        "compile": {
          "enum": [
            "quasar build",
            "vsce package"
          ]
        },
        "config-lint": {
          "enum": [
            "node src/utils/config-lint.js",
            "node node_modules/@skylib/config/src/utils/config-lint.js"
          ]
        },
        "delete-tags": {
          "enum": [
            "php src/utils/delete-tags.php",
            "php node_modules/@skylib/config/src/utils/delete-tags.php"
          ]
        },
        "full-check": {
          "enum": [
            "php src/utils/full-check.php",
            "php node_modules/@skylib/config/src/utils/full-check.php"
          ]
        },
        "inspect": {
          "const": "quasar inspect"
        },
        "lint": {
          "const": "npm run lint-no-fix --fix"
        },
        "lint-fast": {
          "const": "npm run lint --config .eslintrc.fast.js"
        },
        "lint-no-fix": {
          "const": "eslint --max-warnings 0 --no-error-on-unmatched-pattern *.{js,ts} {__mocks__,configs,fixtures,src,tests}/**/*.{js,ts,vue}"
        },
        "lint-no-fix-profile": {
          "const": "set TIMING=1 & npm run lint-no-fix"
        },
        "npm:audit": {
          "const": "npm audit"
        },
        "npm:clean-install": {
          "const": "npm clean-install --no-audit --strict-peer-deps"
        },
        "npm:install": {
          "const": "npm install --no-audit --strict-peer-deps"
        },
        "npm:publish": {
          "const": "publish-if-not-exists"
        },
        "npm:regenerate-lock-file": {
          "const": "npm install --no-audit --package-lock-only --strict-peer-deps"
        },
        "npm:update": {
          "const": "npm update --no-audit --strict-peer-deps"
        },
        "package-json-lint": {
          "const": "npmPkgJsonLint ."
        },
        "php-cs-fixer": {
          "const": "php-cs-fixer fix --verbose"
        },
        "post-commit": {
          "enum": [
            "php src/utils/post-commit.php",
            "php node_modules/@skylib/config/src/utils/post-commit.php"
          ]
        },
        "pre-commit": {
          "enum": [
            "php src/utils/pre-commit.php",
            "php node_modules/@skylib/config/src/utils/pre-commit.php"
          ]
        },
        "prepare": {
          "const": "husky install"
        },
        "serve": {
          "const": "quasar dev"
        },
        "sonar": {
          "const": "sonar-scanner"
        },
        "stylelint": {
          "const": "stylelint --fix --max-warnings 0 src/**/*.{css,scss}"
        },
        "stylelint-html": {
          "const": "stylelint --config .stylelintrc-html.js --fix --max-warnings 0 src/**/*.{html,php,vue}"
        },
        "stylelint-html-no-fix": {
          "const": "stylelint --config .stylelintrc-html.js --max-warnings 0 src/**/*.{html,php,vue}"
        },
        "stylelint-no-fix": {
          "const": "stylelint --max-warnings 0 src/**/*.{css,scss}"
        },
        "test": {
          "const": "cf ./lcov-report & jest"
        },
        "test-fast": {
          "const": "cf ./lcov-report & jest --config=jest.config.fast.js"
        },
        "tsc": {
          "const": "tsc --noEmit"
        },
        "update-package-check": {
          "const": "ncu --dep dev,peer,prod"
        },
        "update-package-force": {
          "const": "ncu --dep dev,peer,prod --upgrade"
        },
        "upgrade": {
          "const": "npm run update-package-force & npm run npm:install"
        },
        "vscode:prepublish": {
          "const": "cf ./out & tsc --project tsconfig-compile.json"
        },
        "vue-tsc": {
          "const": "vue-tsc --noEmit"
        },
        "watch": {
          "const": "tsc -watch"
        }
      },
      "required": [
        "add-tags",
        "browserslist",
        "clear-cache",
        "commit-msg",
        "commitlint",
        "commitlint-all",
        "config-lint",
        "delete-tags",
        "npm:audit",
        "npm:clean-install",
        "npm:install",
        "npm:regenerate-lock-file",
        "npm:update",
        "package-json-lint",
        "post-commit",
        "pre-commit",
        "prepare",
        "update-package-check",
        "update-package-force",
        "upgrade"
      ]
    }
  }
}
