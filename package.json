{
  "name": "@skylib/config",
  "version": "3.15.0",
  "private": false,
  "description": "Config for commitlint, eslint, jest, npm-package-json-lint, php-cs-fixer, phpstan, stylelint, typedoc, and typescript",
  "keywords": [
    "commitlint",
    "config",
    "eslint",
    "jest",
    "php-cs-fixer",
    "stylelint",
    "typedoc",
    "typescript"
  ],
  "homepage": "https://github.com/ilyub/config",
  "bugs": {
    "url": "https://github.com/ilyub/config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ilyub/config.git"
  },
  "license": "ISC",
  "author": "Ilia Liubinskii <admin.phpdev@gmail.com> (https://github.com/ilyub)",
  "publisher": "ilyub",
  "main": "api/index.js",
  "files": [
    "/index.d.ts",
    "/api",
    "/bin",
    "/src",
    "!**/samples"
  ],
  "scripts": {
    "add-tags": "php bin/add-tags.php",
    "browserslist": "browserslist",
    "clear-cache": "cf cache node_modules/.cache",
    "commitlint": "commitlint --edit",
    "commitlint-all": "commitlint --config commitlint-all.config.js --from=",
    "composer:bump": "composer bump",
    "composer:dump-autoload": "composer dump-autoload",
    "composer:outdated": "composer outdated",
    "composer:reinstall": "composer reinstall *",
    "composer:update": "composer update",
    "config-lint": "node bin/config-lint.js",
    "delete-tags": "php bin/delete-tags.php",
    "full-check": "php bin/full-check.php",
    "git:unix": "git config --replace-all core.ignorecase false",
    "git:windows": "git config --replace-all core.ignorecase true",
    "husky:commit-msg": "npm run commitlint",
    "husky:post-commit": "php bin/post-commit.php",
    "husky:pre-commit": "php bin/pre-commit.php",
    "husky:unset-hooks": "git config --unset core.hooksPath",
    "lint": "eslint --fix --max-warnings 0 --no-error-on-unmatched-pattern *.{js,ts} {__mocks__,configs,api,bin,fixtures,src,tests}/**/*.{js,ts,vue}",
    "lint-fast": "eslint --config .eslintrc.fast.js --fix --max-warnings 0 --no-error-on-unmatched-pattern *.{js,ts} {__mocks__,configs,api,bin,fixtures,src,tests}/**/*.{js,ts,vue}",
    "lint-no-fix": "eslint --max-warnings 0 --no-error-on-unmatched-pattern *.{js,ts} {__mocks__,configs,api,bin,fixtures,src,tests}/**/*.{js,ts,vue}",
    "lint-no-fix-profile": "set TIMING=1 & eslint --max-warnings 0 --no-error-on-unmatched-pattern *.{js,ts} {__mocks__,configs,api,bin,fixtures,src,tests}/**/*.{js,ts,vue}",
    "npm:install": "npm install --no-audit --strict-peer-deps",
    "npm:install-clean": "npm install-clean --no-audit --strict-peer-deps",
    "npm:publish": "publish-if-not-exists",
    "npm:regenerate-lock-file": "npm install --no-audit --package-lock-only --strict-peer-deps",
    "npm:update": "npm update --no-audit --strict-peer-deps",
    "package-json-lint": "npmPkgJsonLint ./package.json",
    "php-cs-fixer": "php vendor/bin/php-cs-fixer fix --verbose",
    "phpstan": "php vendor/bin/phpstan analyse -c phpstan.neon",
    "phpstan-quiet": "php vendor/bin/phpstan analyse -c phpstan.neon --quiet",
    "prepare": "husky install",
    "sonar": "sonar-scanner",
    "stylelint": "stylelint --fix --max-warnings 0 src/**/*.{css,scss}",
    "stylelint-html": "stylelint --config .stylelintrc-html.js --fix --max-warnings 0 src/**/*.{html,php,vue}",
    "stylelint-html-no-fix": "stylelint --config .stylelintrc-html.js --max-warnings 0 src/**/*.{html,php,vue}",
    "stylelint-no-fix": "stylelint --max-warnings 0 src/**/*.{css,scss}",
    "test": "cf ./lcov-report & jest",
    "test-fast": "cf ./lcov-report & jest --config=jest.config.fast.js",
    "tsc": "tsc --noEmit",
    "update-package-check": "ncu --dep dev,peer,prod",
    "update-package-force": "ncu --dep dev,peer,prod --upgrade",
    "upgrade": "npm run update-package-force & npm run npm:install"
  },
  "peerDependencies": {
    "@commitlint/cli": ">=17",
    "@commitlint/config-conventional": ">=17",
    "@jest/test-sequencer": ">=28",
    "@skylib/eslint-plugin": "^0.1.34",
    "@types/eslint": ">=8",
    "@types/jest": ">=28",
    "@types/node": ">=18",
    "@typescript-eslint/eslint-plugin": ">=5",
    "@typescript-eslint/parser": ">=5",
    "@vue/vue3-jest": ">=28",
    "clear-folder": ">=3",
    "cpy-cli": ">=4",
    "css-property-sort-order-smacss": ">=2",
    "eslint": ">=8",
    "eslint-config-prettier": ">=8",
    "eslint-import-resolver-typescript": ">=3",
    "eslint-plugin-boundaries": ">=2",
    "eslint-plugin-deprecation": ">=1",
    "eslint-plugin-es": ">=4",
    "eslint-plugin-escompat": ">=3",
    "eslint-plugin-eslint-comments": ">=3",
    "eslint-plugin-etc": ">=2",
    "eslint-plugin-github": ">=4",
    "eslint-plugin-import": ">=2",
    "eslint-plugin-jest": ">=26",
    "eslint-plugin-jest-extended": ">=0",
    "eslint-plugin-jquery": ">=1",
    "eslint-plugin-jsdoc": ">=39",
    "eslint-plugin-no-type-assertion": ">=1",
    "eslint-plugin-no-use-extend-native": ">=0",
    "eslint-plugin-only-warn": ">=1",
    "eslint-plugin-pii": ">=1",
    "eslint-plugin-prettier": ">=4",
    "eslint-plugin-promise": ">=6",
    "eslint-plugin-regexp": ">=1",
    "eslint-plugin-security": ">=1",
    "eslint-plugin-sonarjs": ">=0",
    "eslint-plugin-sort-destructure-keys": ">=1",
    "eslint-plugin-typescript-sort-keys": ">=2",
    "eslint-plugin-unicorn": ">=43",
    "eslint-plugin-vue": ">=9",
    "eslint-plugin-vue-scoped-css": ">=2",
    "eslint-plugin-xss": ">=0",
    "husky": ">=8",
    "jest": ">=28",
    "jest-environment-jsdom": ">=28",
    "jest-environment-node": ">=28",
    "jest-transform-stub": ">=2",
    "jsonschema": ">=1",
    "npm-check-updates": ">=15",
    "npm-package-json-lint": ">=6",
    "postcss-html": ">=1",
    "postcss-scss": ">=4",
    "prettier": ">=2",
    "publish-if-not-exists": ">=1",
    "stylelint": ">=14",
    "stylelint-config-standard-scss": ">=4",
    "stylelint-no-unsupported-browser-features": ">=5",
    "stylelint-order": ">=5",
    "ts-jest": ">=28",
    "ts-transform-import-path-rewrite": ">=0",
    "tslib": ">=2",
    "typedoc": ">=0",
    "typedoc-plugin-markdown": ">=3",
    "typescript": ">=4",
    "vue-eslint-parser": ">=9"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "overrides": {
    "package-json": "8.1.0"
  }
}
