{
  "properties": {
    "compilerOptions": {
      "properties": {
        "baseUrl": {
          "const": "."
        },
        "outDir": {
          "const": "cache/typescript"
        },
        "paths": {
          "properties": {
            "@": {
              "items": {
                "const": "src"
              }
            },
            "@/*": {
              "items": {
                "const": "src/*"
              }
            }
          },
          "required": [
            "@",
            "@/*"
          ]
        },
        "typeRoots": {
          "items": {
            "enum": [
              "node_modules/@skylib",
              "node_modules/@types"
            ]
          }
        }
      },
      "required": [
        "baseUrl",
        "outDir",
        "paths",
        "typeRoots"
      ]
    },
    "extends": {
      "enum": [
        "./src/tsconfig-min",
        "./src/tsconfig-strict",
        "@skylib/config/src/tsconfig-min",
        "@skylib/config/src/tsconfig-strict"
      ]
    },
    "include": {
      "items": {
        "enum": [
          "*.js",
          "*.ts",
          ".eslintrc.js",
          ".eslintrc.overrides.js",
          ".eslintrc.rule-overrides.js",
          ".eslintrc.synonyms.js",
          ".eslintrc.temp.js",
          ".postcssrc.js",
          ".prettierrc.js",
          ".stylelintrc-html.js",
          ".stylelintrc.js",
          "__mocks__/**/*.js",
          "__mocks__/**/*.ts",
          "__mocks__/**/*.vue",
          "api/**/*.js",
          "api/**/*.ts",
          "api/**/*.vue",
          "bin/**/*.js",
          "bin/**/*.ts",
          "bin/**/*.vue",
          "fixtures/**/*.js",
          "fixtures/**/*.ts",
          "fixtures/**/*.vue",
          "src/**/*.js",
          "src/**/*.ts",
          "src/**/*.vue",
          "tests/**/*.js",
          "tests/**/*.ts",
          "tests/**/*.vue"
        ]
      }
    }
  },
  "required": [
    "compilerOptions",
    "exclude",
    "extends",
    "include"
  ]
}
